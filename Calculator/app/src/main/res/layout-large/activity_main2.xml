<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wdk.calculator.calculator.Main2Activity">


    <TextView
        android:id="@+id/content_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text=""
        android:gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/content_txt2"
        />
    <TextView
        android:id="@+id/content_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/content_txt3"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/content_txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="bottom|right"
        android:textSize="36dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/content_txt4"
        />
    <TextView
        android:id="@+id/content_txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="bottom|right"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/tabl"
        />
    <TableLayout
        android:id="@+id/tabl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:stretchColumns="0,2,4,6"
        android:layout_alignParentBottom="true"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.01dp"
            android:background="@color/blue"/>
        <TableRow>
            <Button
                android:id="@+id/C"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="AC"
                android:gravity="center"
                android:background="@drawable/button"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/X"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="✖"
                android:gravity="center"
                android:background="@drawable/button"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/except"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="÷"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/ride"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="*"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="@color/blue"/>
        <TableRow>
            <Button
                android:id="@+id/seven"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="7"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/night"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="8"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/nine"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="9"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/reduce"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="-"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="@color/blue"/>
        <TableRow>
            <Button
                android:id="@+id/four"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="4"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/five"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="5"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/six"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="6"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/plus"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="+"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="@color/blue"/>
        <TableRow>
            <Button
                android:id="@+id/one"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="1"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/two"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="2"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/three"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="3"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="@color/blue"/>
        <TableRow>
            <Button
                android:id="@+id/perc"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="%"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/zero"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="@color/blue"/>

            <Button
                android:id="@+id/spot"
                android:layout_height="50dp"
                android:layout_width="60dp"
                android:text="."
                android:gravity="center"
                android:background="@drawable/button"
                android:textSize="20dp"
                />
        </TableRow>
    </TableLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        >
        <Button
            android:id="@+id/equal"
            android:layout_width="102dp"
            android:layout_height="101dp"
            android:text="="
            android:background="@drawable/equal"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            />
    </FrameLayout>



</RelativeLayout>
